<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1280 720" width="1280" height="720">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0f101c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#15191f;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cardGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#15161b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1d28;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1280" height="720" fill="url(#bgGrad)"/>
  
  <!-- Desk surface -->
  <rect x="0" y="500" width="1280" height="220" fill="#1a1f2e" opacity="0.6"/>
  
  <!-- Psychology Log Card -->
  <g transform="translate(200, 350)">
    <rect x="0" y="0" width="280" height="200" rx="12" fill="url(#cardGrad)" stroke="rgba(0, 246, 255, 0.2)" stroke-width="1" filter="url(#glow)"/>
    <text x="20" y="35" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="600" fill="#00f6ff">Daily Psychology Log</text>
    <line x1="20" y1="50" x2="260" y2="50" stroke="rgba(0, 246, 255, 0.15)" stroke-width="1"/>
    
    <!-- Checkbox items -->
    <g transform="translate(20, 65)">
      <rect x="0" y="0" width="14" height="14" rx="2" fill="none" stroke="rgba(0, 246, 255, 0.4)" stroke-width="1.5"/>
      <path d="M 3 7 L 6 10 L 11 4" stroke="#00f6ff" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <text x="20" y="13" font-family="system-ui" font-size="12" fill="rgba(233, 234, 240, 0.7)">Pre-trade checklist</text>
      
      <rect x="0" y="25" width="14" height="14" rx="2" fill="none" stroke="rgba(0, 246, 255, 0.4)" stroke-width="1.5"/>
      <text x="20" y="38" font-family="system-ui" font-size="12" fill="rgba(233, 234, 240, 0.7)">Emotion tags</text>
      
      <rect x="0" y="50" width="14" height="14" rx="2" fill="none" stroke="rgba(0, 246, 255, 0.4)" stroke-width="1.5"/>
      <text x="20" y="63" font-family="system-ui" font-size="12" fill="rgba(233, 234, 240, 0.7)">Cooldown rules</text>
      
      <rect x="0" y="75" width="14" height="14" rx="2" fill="none" stroke="rgba(0, 246, 255, 0.4)" stroke-width="1.5"/>
      <text x="20" y="88" font-family="system-ui" font-size="12" fill="rgba(233, 234, 240, 0.7)">Weekly review</text>
    </g>
  </g>
  
  <!-- Emotion Tag Chips -->
  <g transform="translate(600, 380)">
    <rect x="0" y="0" width="80" height="30" rx="15" fill="rgba(127, 90, 240, 0.2)" stroke="rgba(127, 90, 240, 0.5)" stroke-width="1"/>
    <text x="40" y="20" font-family="system-ui" font-size="11" fill="#7f5af0" text-anchor="middle" font-weight="600">FOMO</text>
  </g>
  
  <g transform="translate(600, 420)">
    <rect x="0" y="0" width="80" height="30" rx="15" fill="rgba(255, 78, 205, 0.2)" stroke="rgba(255, 78, 205, 0.5)" stroke-width="1"/>
    <text x="40" y="20" font-family="system-ui" font-size="11" fill="#ff4ecd" text-anchor="middle" font-weight="600">Fear</text>
  </g>
  
  <g transform="translate(600, 460)">
    <rect x="0" y="0" width="80" height="30" rx="15" fill="rgba(0, 246, 255, 0.2)" stroke="rgba(0, 246, 255, 0.5)" stroke-width="1"/>
    <text x="40" y="20" font-family="system-ui" font-size="11" fill="#00f6ff" text-anchor="middle" font-weight="600">Calm</text>
  </g>
  
  <!-- Weekly Review Loop Icon -->
  <g transform="translate(800, 360)">
    <circle cx="60" cy="60" r="55" fill="none" stroke="rgba(0, 246, 255, 0.3)" stroke-width="2"/>
    <path d="M 20 60 Q 60 20, 100 60 Q 60 100, 20 60" fill="none" stroke="#00f6ff" stroke-width="2" opacity="0.6"/>
    <circle cx="60" cy="60" r="8" fill="#00f6ff" opacity="0.8"/>
    
    <!-- Arrow indicators -->
    <g transform="translate(60, 60)">
      <path d="M -20 0 L 0 -20" stroke="#7f5af0" stroke-width="2" fill="none"/>
      <path d="M 0 -20 L 20 0" stroke="#7f5af0" stroke-width="2" fill="none"/>
      <path d="M 0 -20 L 0 -40" stroke="#ff4ecd" stroke-width="2" fill="none"/>
    </g>
    
    <text x="60" y="140" font-family="system-ui" font-size="13" fill="rgba(233, 234, 240, 0.8)" text-anchor="middle" font-weight="600">Weekly Review Loop</text>
  </g>
  
  <!-- Subtle gradient overlay -->
  <rect width="1280" height="720" fill="url(#bgGrad)" opacity="0.3"/>
  
  <!-- Decorative lines -->
  <g stroke="rgba(0, 246, 255, 0.1)" stroke-width="1">
    <line x1="0" y1="150" x2="640" y2="150"/>
    <line x1="640" y1="150" x2="1280" y2="570"/>
    <circle cx="640" cy="150" r="3" fill="#00f6ff" opacity="0.3"/>
  </g>
  
  <!-- Accent dots -->
  <circle cx="150" cy="200" r="3" fill="#00f6ff" opacity="0.4"/>
  <circle cx="1150" cy="250" r="3" fill="#7f5af0" opacity="0.4"/>
  <circle cx="300" cy="550" r="3" fill="#ff4ecd" opacity="0.4"/>
</svg>
